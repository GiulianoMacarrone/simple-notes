{
  "ConnectionStrings": {
    /*
    NOTE:
    This connection string is configured for Windows Authentication and is specific to my local machine.
    Before running the backend, you must update the 'Server' value to point to your local SQL Server instance.
    
    Example for SQL Server Authentication:
    "Server=YOUR_SERVER_NAME;Database=NotesDB;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;"
    
    You will also need to manually apply the database migrations by running the "run.sh" script form the project's root directory.
    This script will create the database and apply the necessary migrations.
    */
    "DefaultConnection": "Server=localhost;Database=NotesDB;Integrated Security=True;TrustServerCertificate=True;",

  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    //Change this key to a super secret key of minimum 16 characters before running in production
    "Key": "YOUR_SUPER_SECRET_KEY_HERE_MINIMUM_16_CHARACTERS"
  }
}